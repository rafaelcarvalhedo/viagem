<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

	<!-- Configuracoes do hibernate para o projeto AGENDA -->
	<persistence-unit name="viagem">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<properties>
			<property name="hibernate.archive.autodetection" value="class, hbm" />

			<!--Configuracoes de dialeto e conexao com o banco de dados -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:file:/Users/imac/Downloads/viagem/bd/viagemBD" />
<!-- 			<property name="hibernate.connection.url" value="jdbc:hsqldb:file:D:/workspace/viagem/bd/agendaBD/agendaBD" /> -->
			<property name="hibernate.connection.username" value="SA" />
			<property name="hibernate.connection.password" value="" />	
				
			<!--Configuracoes de Debug-->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="use_sql_comments" value="true" />
			
			<!-- criacao das tabelas automaticamente -->
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			
		</properties>

	</persistence-unit>
</persistence>
